set nocompatible
syntax on
set number
" Tab config x 4 spaces
set shiftwidth=4
set tabstop=4
set expandtab
" ---------------------
set scrolloff=10
set showcmd
set showmode
set history=1000

set hlsearch
set autoindent

colorscheme darkblue

